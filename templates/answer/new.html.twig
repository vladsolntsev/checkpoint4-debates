{% extends 'base.html.twig' %}

{% block title %}New Answer{% endblock %}
{% block body %}
  <div class="container-fluid ">
      <div class="row d-flex justify-content-center">
          <div class="col-6 ">
              <h1 class="text-center mt-2 mb-3">Create new Answer</h1>
              {{ form_start(form) }}
              <div>
                  {{ form_widget(form) }}
              </div>

              <div class="d-flex justify-content-center">
                  <input class="btn btn-secondary align-self-center" type='submit' value='Add answer'>
              </div>

              {{ form_end(form) }}
          </div>
      </div>
  </div>

{% endblock %}
